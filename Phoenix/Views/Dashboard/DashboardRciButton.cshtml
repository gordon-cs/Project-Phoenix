@model Phoenix.Models.ViewModels.HomeRciViewModel
     @{
         var rci = Model;
         var rciCssClass = "";
         if (rci.RciStage == "CHECKIN")
         {
             rciCssClass = "rci-card-checkin";
         }
         else
         {
             rciCssClass = "rci-card-checkout";
         }
     }
<div class="divAddOn-vert rci-card">
    <a href="@Url.Action(actionName:"GotoRci", controllerName:"Dashboard", routeValues: new { rciID = rci.RciID })">
        <div class="divAddOn-vert-field search-field @rciCssClass">
            <p class="emphasized">@rci.BuildingCode @rci.RoomNumber</p>
            <p>@rci.FirstName @rci.LastName</p>
            @Html.Partial("~/Views/Dashboard/SignatureBlocks.cshtml", rci)
        </div>
    </a>
</div>
