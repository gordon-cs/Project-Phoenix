<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online RCI -@ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
    @RenderSection("Styles", required: false)
</head>
<body class="rci-body">
    @Scripts.Render("~/bundles/js/jquery")
    @Scripts.Render("~/bundles/js/bootstrap")
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online RCI", "Index", "Placeholder", new { area = "" }, new { @class = "navbar-brand" })
                @{ 
                    if (ViewBag.Name != null)
                    {
                        <p class="navbar-brand"> Welcome, @ViewBag.Name</p>
                    }
                }
            </div>
            <div class="navbar-collapse collapse">
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Phoenix</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/js/rci")
    @RenderSection("scripts", required: false)
</body>
</html>
