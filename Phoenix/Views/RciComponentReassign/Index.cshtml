@model Phoenix.Models.ViewModels.RciReassignViewModel

@{
    ViewBag.Title = "Reassign Components";
    ViewBag.MenuExists = "T";
    ViewBag.ViewTitle = Model.BuildingCode + Model.RoomNumber + " " + Model.FirstName + " " + Model.LastName;
    ViewBag.Name = TempData["user"];
    ViewBag.Role = TempData["role"];
}

@section Styles{
    @Styles.Render("~/bundles/page_specific/css/rci-component-reassign")
}

<div class="view">
    <div class="pane">
        @using (Html.BeginForm(actionName: "Index", controllerName: "RciComponentReassign", method: FormMethod.Post))
        {
            foreach (var component in Model.RciComponent)
            {
                <div class="divAddOn swappable-component">
                    <div class="divAddOn-item check-box"><input type="checkbox" name="rciComponent" value="@component.RciComponentID" /></div>
                    <h3 class="divAddOn-field">@component.RciComponentName</h3>
                </div>
            }
            <div class="divAddOn">
                <label class="divAddOn-item" >Swap with</label>
                <select class="divAddOn-field" name="assignTo">
                    @foreach (var rci in Model.RciTarget)
                    {
                        <option value="@rci.RciID">@rci.RciOwner</option>
                    }
                </select>
                <input class="divAddOn-item" type="submit" value="OK" />
            </div>
        }
    </div>   
</div>